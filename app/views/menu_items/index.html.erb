<h1 class="title">Menu Items by Category</h1>

<% @categories.each do |category| %>
  <h2 class="title"><%= category.title %>s</h2>
  <table class="table is-bordered">
    <tr>
      <th>Item</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Quantity</th>
      <th></th>
    </tr>
    <% category.menu_items.each do |menu_item| %>
    <tr>
      <td><%= menu_item.name %></td>
      <td><%= menu_item.description %></td>
      <td>$<%= menu_item.price %></td>
      <td><%= link_to 'View Item', menu_item_path(menu_item) %></td>
      <%= form_tag "/order_items", method: :post do%>
        <td><%= number_field(:quantity, in: 0..20)%></td>
        <%= hidden_field_tag :menu_item_id, menu_item.id %>
      <td><%= submit_tag "Add to Order" %></td>
      <% end %>
    </tr>

    <% end %>
    </table>
  <% end %>



<%= link_to 'Add a Menu Item', new_menu_item_path %>
